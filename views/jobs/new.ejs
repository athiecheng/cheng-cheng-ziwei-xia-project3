            <input type="text" id = "title" name = "job[title]">
        </div>
        <div>
            <label for = "company">Company</label>
            <input type="text" id = "company" name = "job[company]">
        </div>
        <div>
            <label for = "location">Location</label>
            <input type="text" id = "location" name = "job[location]">
        </div>
