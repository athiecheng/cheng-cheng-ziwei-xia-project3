<% layout('layouts/boilerplate')%>


<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-10 ">
            <div ckass="card shadow">
                <div class="card-body">
                    
                   <h5 class="card-title">Login</h5>
                    <form action= "/login" method="POST" novalidate class="validated-form">

                        <div class="mb-4">
                            <label class="form-label" for = "username">Username</label>
                            <input class="form-control"  type="text" id = "username" name = "username" autofocus required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    
                        <div class="mb-4">
                            <label class="form-label" for = "password">Password</label>
                            <input class="form-control"  type="text" id = "password" name = "password" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    
                        <button class="btn btn-success btn-primary">Login</button>
                    
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>